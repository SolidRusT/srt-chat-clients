/* darkmode.qss */

QMainWindow {
    background-color: #2b2b2b;
}

QLabel, QToolBar, QStatusBar {
    color: #dcdcdc;
}

QPushButton {
    background-color: #3c3f41;
    border: 1px solid #3c3f41;
    color: #dcdcdc;
    padding: 5px;
    border-radius: 2px;
}

QPushButton:hover {
    background-color: #4b6eaf;
}

QLineEdit, QTextEdit {
    background-color: #313335;
    color: #dcdcdc;
    border: 1px solid #3c3f41;
    padding: 2px;
    border-radius: 2px;
}

QScrollBar:vertical {
    border: none;
    background-color: #3c3f41;
    width: 10px;
    margin: 0px 0px 0px 0px;
}

QScrollBar::handle:vertical {
    background-color: #686868; 
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #787878;
}

QToolBar {
    background-color: #3c3f41; /* Toolbar background */
    border: none;
    spacing: 3px; /* Spacing between toolbar items */
}

QToolBar QLabel,
QToolBar QToolButton { /* Assuming you are using QLabel and QToolButton in the toolbar */
    color: #ffffff; /* White text color */
    font-weight: bold; /* Bold font */
}

/* If you are using QAction, you might need to style QToolButton */
QToolButton { 
    color: #ffffff; /* White text color */
    font-weight: bold; /* Bold font */
}

